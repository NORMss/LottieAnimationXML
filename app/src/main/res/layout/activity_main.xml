<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toTopOf="@+id/full_anim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="lottie_2.json" />

    <Button
        android:id="@+id/full_anim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Full animation"
        app:layout_constraintBottom_toTopOf="@+id/stop_anim"
        app:layout_constraintEnd_toEndOf="@+id/stop_anim"
        app:layout_constraintStart_toStartOf="@+id/stop_anim" />

    <Button
        android:id="@+id/stop_anim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop animation"
        app:layout_constraintBottom_toTopOf="@+id/start_anim"
        app:layout_constraintEnd_toEndOf="@+id/start_anim"
        app:layout_constraintStart_toStartOf="@+id/start_anim" />

    <Button
        android:id="@+id/start_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start animation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>